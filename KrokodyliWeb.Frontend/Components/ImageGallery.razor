@using KrokodyliWeb.Utils
@inject IModalService modals 


<div class="container">

    <div class="portfolio-item row justify-content-center">
        @foreach(var img in Images.Iterate())
        {
            <div class="item selfie col-lg-3 col-md-4 col-6 col-sm-12 justify-content-center"  style="margin: 20px;">
                <img class="img-fluid" src="@(img.Value.Source)" alt="@(img.Value.Alt)" @onclick="()=>PreviewImage(img)">
            </div>
        }
    </div>
</div>
      


@code {
    [CascadingParameter]
    public ImagePool.Data? PoolData{ get; set; }


    [Parameter]
    public DoubleLinkedList<ImageDescriptor>? Images { get; set; } = null;


    protected override void OnParametersSet()
    {
        if (PoolData != null)
            PoolData.Images = PoolData.Images.AppendList(Images);
    }


    private void PreviewImage(DoubleLinkedList<ImageDescriptor> index)
    {
        modals.ShowImagePreview(index);
    }

}
