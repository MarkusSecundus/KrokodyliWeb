@inject IModalService modals

<img class="@Class_value" src="@(Descr.Value.Source)" alt="@(Descr.Value.Alt)" @onclick="ShowPreview"/>



@code {

    [Parameter]
    public ListElementView<ImageDescriptor> Descr { get; set; } = default!;

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public bool Previewable { get; set; } = true;

    private string Class_value => Class + "img-fluid";



    private void ShowPreview()
    {
        if (!Previewable) return;

        modals.ShowImagePreview(Descr.Index, Descr.List);
    }
}
