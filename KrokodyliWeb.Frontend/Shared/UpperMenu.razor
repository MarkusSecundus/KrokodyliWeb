@code {
    private RenderFragment Button(string text, string href) => __builder =>
    {
    <li class="nav-item"><a class="nav-link text-white" id="uppermenu_btn" href="@href">@text</a></li>
    };

    private RenderFragment Dropdown(string text, params (string Text, string Href)[] options) => __builder =>
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" id="uppermenu_btn"  data-toggle="dropdown" href="#"  role="button" aria-haspopup="true" aria-expanded="false">@text</a>
            <div class="dropdown-menu">
            @foreach(var o in options)
            {
                <a class="dropdown-item" href="@(o.Href)">@(o.Text)</a>
            }
            </div>
        </li>
    };

}
