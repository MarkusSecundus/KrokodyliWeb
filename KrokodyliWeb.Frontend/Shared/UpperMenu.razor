<nav class="navbar navbar-expand-lg navbar-light bg-transparent text-white">
  <a class="navbar-brand text-white" href="#">Krokodýli</a>
  <button class="navbar-toggler  btn-close-white" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon "></span>
  </button>

  <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        
        @Button("Domů", "index")
        @Dropdown("O nás", 
            ("O nás", "about-us"),
            default,
            ("Naše činnost", "about-us/our-work"),
            ("Naše parta", "about-us/our-team"),
            ("Kde nás najdete", "about-us/where-to-find-us")
        )
        @Button("Akce","events")
        @Button("Tábor","summer-camp")
        @Dropdown("Pro členy", 
            ("Pro členy", "for-members"),
            default,
            ("Kronika", "/for-members/chronicles"),
            ("Bodování", "/for-members/scores"),
            ("Stezka", "/for-members/stezka"),
            ("Pomůcky na schůzky a akce", "/for-members/accessories-list"),
            ("Kroj", "/for-members/uniforms"),
            ("Čísla členů", "/for-members/numbering"),
            ("Burza", "/for-members/second-hand")
        )
        @Button("Fotogalerie", "fotogalery-test")
        @Button("Podpořte nás!", "how-to-support-us")
        @Button("Odkazy", "references")
        @Button("Kontakt", "contacts")
    </ul>
  </div>
</nav>




@code {
    private RenderFragment Button(string text, string href) => __builder =>
    {
    <li class="nav-item"><a class="nav-link text-white" id="uppermenu_btn" href="@href">@text</a></li>
    };

    private RenderFragment Dropdown(string text, params (string Text, string Href)[] options) => __builder =>
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" id="uppermenu_btn"  data-toggle="dropdown" href="#"  role="button" aria-haspopup="true" aria-expanded="false">@text</a>
            <div class="dropdown-menu">
            @foreach(var o in options)
            {
                @if(o == default)
                {
                    <div class="dropdown-divider"></div>
                }
                else
                {
                    <a class="dropdown-item" href="@(o.Href)">@(o.Text)</a>
                }
            }
            </div>
        </li>
    };

}
